---
import PostTitle from "../components/PostTitle.astro";
import samplePic from "../assets/samplePic.jfif";
import sampleProfile from "../assets/sampleProfile.png";
import { Image, Picture } from "@astrojs/image/components";

const { frontmatter } = Astro.props;
---

<section>
  <div id="title-container" class="p-8 flex justify-center bg-stone-700">
    <div class="w-3/4 max-w-3/4 p-8 relative">
      <div>
        <PostTitle text={frontmatter.title} />
        <div
          class="w-full absolute -bottom-1/2 flex flex-col justify-center align-center left-0 px-8"
        >
          <img
            id="title-image"
            src={samplePic}
            alt="samplePic"
            class="w-full object-cover rounded-lg"
          />
          <div class="w-full flex justify-center">
            <div class="w-24 h-24 rounded-full bg-yellow-400 -mt-12">
              <!-- <img src={sampleProfile} alt="sampleProfile" class="object-cover" /> -->
            </div>
          </div>
          <div class="w-full flex justify-center">
            <div class="flex flex-col">
              <div class="flex justify-center">{frontmatter?.author}</div>
              <div class="text-black not-italic font-normal">
                {frontmatter?.authorJob}, <span
                  class="font-semibold text-gray-600 italic"
                  >{frontmatter.authorCompany}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="pt-36">
  <div class="p-8 flex justify-center">
    <div class="w-3/4 max-w-3/4 p-8 text-sm">
      <slot />
    </div>
  </div>
</section>

<style>
  #title-container {
    height: 425px;
  }

  #title-image {
    height: 300px;
  }
</style>
